<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Food App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" integrity="sha512-Evv84Mr4kqVGRNSgIGL/F/aIDqQb7xQ2vcrdIwxfjThSH8CSR7PBEakCr51Ck+w+/U6swU2Im1vVX0SVk9ABhg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="./css/jquery-ui.min.css"/>
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css" />
</head>
<body>
    <header class="position-sticky top-0">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-pink fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Food App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-pink fw-bold" asp-area="">Menu</a>
                        </li>
                    </ul>
                    @if (User.Identity!.IsAuthenticated)
                    {
                        <div class="d-flex justify-content-center align-content-center">
                            <div class="text-center">
                                <span class="p-4" id="cartListIcon"><i class="fa-solid fa-cart-shopping text-pink fs-4"></i></span>
                                <div id="showCartList" 
                                    class="position-absolute shadow-lg rounded p-2 bg-white">
                                    
                                </div>
                            </div>
                            <div>
                                <a class="nav-link fw-bold text-pink" asp-controller="Account" asp-action="LogOut">LogOut</a>
                                
                             </div>
                            
                        </div>
                    }
                    else
                    {
                        <div>
                            <a class="nav-link fw-bold text-pink" asp-controller="Account" asp-action="Login">LogIn</a>
                        </div>
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-white p-3">
        <div class="container mt-2">
            <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                    <h4>Food Application</h4>
                    <p>Healthy, save and fastest</p>
                </div>
                <div class=col-sm-4 col-md-4 col-lg-4 col-xl-4>
                    <h4>Contact Us</h4>
                    <div class="mt-3">
                        <span><i class="fa-brands fa-instagram fs-5"></i></span>
                        <span class="fs-6 mx-1">Instagram</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-brands fa-whatsapp fs-5"></i></span>
                        <span class="fs-6 mx-1">Whatsapp</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-brands fa-facebook fs-5"></i></span>
                        <span class="fs-6 mx-1">Facebook</span>
                    </div>
                    <div class="mb-2">
                        <span><i class="fa-solid fa-envelope fs-5"></i></span>
                        <span class="fs-6 mx-1">Mail</span>
                    </div>
                 </div>
                 <div class="col-sm-4 col-md-4 col-lg-4 col-xl-4">
                     <h4>Address</h4>
                     <pre>Calicut, Kerala, India 103746</pre>
                 </div>
            </div>
            <div>
                <h5 class="text-center">Powered By Forkify</h5>
            </div>
        </div>
    </footer>
    <!-- jQuery FIRST -->
    <script src="~/lib//jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Your site or custom scripts that depend on jQuery -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- jQuery UI (for autocomplete) -->
    
    <script src="~/js/jquery-ui.min.js"></script>
    @if (User.Identity!.IsAuthenticated)
    {
        <script type="text/javascript">
        $(document).ready(function(){
            getAddedCarts();
            getCartList();
        })   
        </script>
    }

    

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
